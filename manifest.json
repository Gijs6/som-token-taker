{
    "manifest_version": 3,
    "name": "Somtoday token taker",
    "version": "1.0",
    "description": "Easy token extractor for Somtoday tokens",
    "permissions": ["storage"],
    "host_permissions": ["https://leerling.somtoday.nl/*"],
    "content_scripts": [
        {
            "matches": ["https://leerling.somtoday.nl/*"],
            "js": ["main.js"],
            "css": ["styles.css"]
        }
    ]
}
